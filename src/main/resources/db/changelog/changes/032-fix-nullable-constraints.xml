<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="032" author="kai">

        <dropNotNullConstraint tableName="schoolclass" columnName="letter" columnDataType="CHAR(1)"/>
        <dropNotNullConstraint tableName="schoolclass" columnName="year" columnDataType="INT"/>
        <dropNotNullConstraint tableName="schoolclass" columnName="max_capacity" columnDataType="INT"/>
        
        <dropNotNullConstraint tableName="schedule" columnName="lesson_number" columnDataType="INT"/>
        
        <addNotNullConstraint tableName="schedule" columnName="assignment_id" columnDataType="UUID"/>
    </changeSet>

</databaseChangeLog>
