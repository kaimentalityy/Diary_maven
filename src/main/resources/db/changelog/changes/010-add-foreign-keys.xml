<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="010" author="kai">
        <addForeignKeyConstraint baseTableName="users" baseColumnNames="role_id"
                                 constraintName="fk_users_role" referencedTableName="role"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="schoolclass" baseColumnNames="teacher_id"
                                 constraintName="fk_class_teacher" referencedTableName="teacher_profiles"
                                 referencedColumnNames="user_id"/>

        <addForeignKeyConstraint baseTableName="teacher_assignment" baseColumnNames="teacher_id"
                                 constraintName="fk_ta_teacher" referencedTableName="teacher_profiles"
                                 referencedColumnNames="user_id"/>

        <addForeignKeyConstraint baseTableName="teacher_assignment" baseColumnNames="subject_id"
                                 constraintName="fk_ta_subject" referencedTableName="subject"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="teacher_assignment" baseColumnNames="class_id"
                                 constraintName="fk_ta_class" referencedTableName="schoolclass"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="schedule" baseColumnNames="assignment_id"
                                 constraintName="fk_schedule_assignment" referencedTableName="teacher_assignment"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="lesson" baseColumnNames="schedule_id"
                                 constraintName="fk_lesson_schedule" referencedTableName="schedule"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="attendance" baseColumnNames="lesson_id"
                                 constraintName="fk_attendance_lesson" referencedTableName="lesson"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="attendance" baseColumnNames="pupil_id"
                                 constraintName="fk_attendance_pupil" referencedTableName="student_profiles"
                                 referencedColumnNames="user_id"/>

        <addForeignKeyConstraint baseTableName="grades" baseColumnNames="pupil_id"
                                 constraintName="fk_grades_pupil" referencedTableName="student_profiles"
                                 referencedColumnNames="user_id"/>

        <addForeignKeyConstraint baseTableName="grades" baseColumnNames="lesson_id"
                                 constraintName="fk_grades_lesson" referencedTableName="lesson"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>